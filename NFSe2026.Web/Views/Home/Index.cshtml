@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .dashboard-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
    }

    .dashboard-card .card-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .dashboard-card .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .dashboard-card .card-text {
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    .welcome-section {
        background: linear-gradient(135deg, var(--theme-primary-gradient-start) 0%, var(--theme-primary-gradient-end) 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 15px;
        margin-bottom: 3rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .welcome-section h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .welcome-section .lead {
        font-size: 1.2rem;
        opacity: 0.95;
    }

    .btn-dashboard {
        padding: 0.75rem 2rem;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-dashboard:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .card-icon-container {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2.5rem;
    }
</style>

<div class="welcome-section text-center">
    <h1>👋 Bem-vindo, @ViewBag.UsuarioNome!</h1>
    <p class="lead mb-0">Empresa: @ViewBag.EmpresaRazaoSocial</p>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card dashboard-card shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="card-icon-container bg-primary bg-opacity-10 text-primary">
                    🏢
                </div>
                <h5 class="card-title">Tomadores</h5>
                <p class="card-text">Gerencie seus tomadores de serviço, cadastre novos clientes e mantenha suas informações atualizadas.</p>
                <a asp-controller="Tomador" asp-action="Index" class="btn btn-primary btn-dashboard">
                    <span>📋</span> Gerenciar Tomadores
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card dashboard-card shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="card-icon-container bg-success bg-opacity-10 text-success">
                    📄
                </div>
                <h5 class="card-title">Notas Fiscais</h5>
                <p class="card-text">Emita, gerencie e acompanhe suas notas fiscais de serviço de forma simples e eficiente.</p>
                <a asp-controller="NotaFiscal" asp-action="Index" class="btn btn-success btn-dashboard">
                    <span>💰</span> Gerenciar Notas Fiscais
                </a>
            </div>
        </div>
    </div>
</div>
