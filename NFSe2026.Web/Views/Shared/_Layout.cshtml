<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NFSe 2026</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NFSe2026.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NFSe 2026</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Tomador" asp-action="Index">Tomadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="NotaFiscal" asp-action="Index">Notas Fiscais</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UsuarioNome")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Context.Session.GetString("UsuarioNome")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Empresa" asp-action="Edit">Editar Empresa</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Sair</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Toast Container - Centro da tela -->
    <div class="toast-container position-fixed top-50 start-50 translate-middle p-3" style="z-index: 11">
        <div id="toastContainer"></div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NFSe 2026
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-switcher.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div data-toast-message="@TempData["SuccessMessage"]" data-toast-type="success" style="display: none;"></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div data-toast-message="@TempData["ErrorMessage"]" data-toast-type="error" style="display: none;"></div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div data-toast-message="@TempData["InfoMessage"]" data-toast-type="info" style="display: none;"></div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div data-toast-message="@TempData["WarningMessage"]" data-toast-type="warning" style="display: none;"></div>
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Processa apenas os elementos data-toast-message que ainda não foram processados
            document.querySelectorAll('[data-toast-message]:not([data-processed])').forEach(function(el) {
                var message = el.getAttribute('data-toast-message');
                var type = el.getAttribute('data-toast-type');
                showToast(message, type);
                el.setAttribute('data-processed', 'true'); // Marca como processado para evitar duplicação
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
